<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>


    <style name="ToolTipDialog"/>

    <style name="ToolTipDialog.Text">
        <item name="android:textColor">?android:colorForeground</item>
    </style>

    <style name="ToolTipDialog.Text.Subtitle">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>


    <style name="ToolTipDialog.Text.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:lineSpacingExtra">1sp</item>
    </style>

    <style name="ToolTipDialog.Text.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4sp</item>
    </style>

    <style name="TooltipDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="toolTipDialog.titleTextStyle">@style/ToolTipDialog.Text.Title</item>
        <item name="toolTipDialog.subtitleTextStyle">@style/ToolTipDialog.Text.Subtitle</item>
        <item name="toolTipDialog.bodyTextStyle">@style/ToolTipDialog.Text.Body</item>
        <item name="toolTipDialog.backgroundColor">@android:color/white</item>
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>


</resources>